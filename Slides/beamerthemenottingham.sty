% formatting of content page


\setbeamerfont{frametitle}{size={\Large}} %\Large size for frame titles
\setbeamercolor*{frametitle}{fg=white!100}
\setbeamercolor*{page number in head/foot}{fg=black}
\setbeamerfont{footline}{size={\tiny}}

%	\includegraphics[width=\paperwidth]{figures/headerOnly.eps} 	

\setbeamertemplate{frametitle}
{%
    \nointerlineskip\vskip-1.3ex
    \begin{tcolorbox}[%
      enhanced,%
      sharp corners,%
      boxrule=0pt,%
      frame empty,%
      watermark graphics={figures/headerOnly.eps},%
      watermark zoom=1.00,%
      enlarge left by=-\beamer@leftmargin,%
      width=\paperwidth,%
      colback=white,%
    ]
     \vspace{0.02\pageheight}\hspace{0.2\pagewidth}\strut\textcolor{white}{\textbf{\insertframetitle}}\strut
    \end{tcolorbox}
}

\setbeamertemplate{footline}{
  \leavevmode%
%  \ifnum\thepage>1\relax%
  \hbox{%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{}%
	\ifnum\thepage>1\relax%
    \insertshortauthor, \insertshortinstitute
    \fi
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{}%
	\ifnum\thepage>1\relax%
    \insertshortdate
    \fi
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right]{}%
	\ifnum\thepage>1\relax%
	\insertframenumber{} of \inserttotalframenumber \hspace*{2ex} 
	\fi
  \end{beamercolorbox}}%
  \vskip0pt%
%  \fi
}

